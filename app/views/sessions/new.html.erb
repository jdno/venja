<div class="container mx-auto max-w-md px-2">
  <h1 class="font-bold text-xl md:text-4xl text-blue-500 my-6">
    <%= t(".title") %>
  </h1>

  <%= form_for :session, url: session_path do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :email, type: "email", autofocus: true, class: "shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="form-group mt-6">
      <%= form.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.password_field :password, class: "shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="form-action mt-6">
      <%= form.submit nil, class: "bg-blue-500 hover:bg-teal-500 font-bold no-underline text-white hover:text-white px-4 py-2 rounded" %>
    </div>

    <div class="mt-2 flex flex-col">
      <% if Clearance.configuration.allow_sign_up? %>
        <%= link_to t(".sign_up"), sign_up_path, class: "" %>
      <% end %>
      <%= link_to t(".forgot_password"), new_password_path %>
    </div>
  <% end %>
</div>
